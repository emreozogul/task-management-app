{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "main-capability",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "fs:default",
        {
            "identifier": "fs:scope-document-recursive",
            "allow": [
                {
                    "path": "$DOCUMENT/**"
                }
            ]
        },
        {
            "identifier": "fs:allow-document-read",
            "allow": [
                {
                    "path": "$DOCUMENT/*"
                }
            ]
        },
        {
            "identifier": "fs:allow-document-write",
            "allow": [
                {
                    "path": "$DOCUMENT/*"
                }
            ]
        }
    ]
}